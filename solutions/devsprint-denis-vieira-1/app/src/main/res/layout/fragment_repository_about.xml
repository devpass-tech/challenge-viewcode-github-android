<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.RepositoryAboutFragment">

    <TextView
        android:id="@+id/textview_about_repository"
        android:layout_width="0dp"
        android:layout_height="@dimen/margin_secondary"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginStart="@dimen/margin_secondary"
        android:layout_marginEnd="@dimen/margin_secondary"
        android:textColor="@color/devpass_black_title"
        android:textSize="@dimen/title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/text_about"/>

    <TextView
        android:id="@+id/textview_description_about_repository"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginStart="@dimen/margin_secondary"
        android:layout_marginEnd="@dimen/margin_secondary"
        android:maxLines="3"
        android:textColor="@color/devpass_gray_subtitle"
        android:textSize="@dimen/subtitle"
        app:layout_constraintTop_toBottomOf="@id/textview_about_repository"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/description_text_about"/>

</androidx.constraintlayout.widget.ConstraintLayout>